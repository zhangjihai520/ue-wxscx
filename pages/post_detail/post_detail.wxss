}
.share_time{
  line-height:50rpx
}

/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.drawer_box {
  width: 100vw;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  /* margin: -150px 50rpx 0 50rpx; */
  border-radius: 3px;
}
.bd_style{
  display: flex;
  justify-content: space-between
}
