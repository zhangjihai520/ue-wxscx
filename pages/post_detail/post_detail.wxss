}
.user_img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.user_name,.user_tiem{
  padding-left: 10px
}
.user_name{
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 135, 40, 1)
}
.user_tiem,.share_time{
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1)
}
.user_ask{
  font-size: 24rpx;
  padding:5px 6px;
  border: 1px solid rgba(63, 148, 226, 1);
