}
.text_info{
  font-size: 34rpx;
  color: rgba(26, 26, 26, 1);
  font-weight: 400;
  padding:0 37px 0 16px;
  line-height: 34rpx;
}
.show_box{
  width: 100%;
  padding:10px 0;
  border-bottom: 1px solid rgba(224, 224, 224, 1);
}
.show_img{
  width: 100%;
  height: 336rpx;
}
.weui-flex{
  padding-bottom:0;
}
.weui-flex__item{
  text-align: center
}
.icons{
  width: 34rpx;
  height: 32rpx;
}
.text_num{
  font-size: 28rpx;
  color: rgba(138, 138, 138, 1);
  padding-left: 6px;
}
.itemTitle{
  padding:16px 0 10px 16px;
  font-size: 34rpx;
  line-height: 34rpx;
  color:rgba(110, 110, 110, 1);
  font-weight: 400;
  border-bottom: 1px solid rgba(224, 224, 224, 1);
}
.share_img{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.share_name,.share_name2,.share_info,.share_bd{
  margin-left:24rpx;
}
.share_name{
  font-size: 28rpx;
  color: rgba(89, 89, 89, 1);
}
.share_name2{
  font-size: 32rpx;
  color: rgba(31, 31, 31, 1);
  font-weight: 600
}
.share_info{
  font-size: 22rpx;
  color: rgba(63, 148, 226, 1);
  background: rgba(240, 240, 240, 1);
  padding: 1px 5px;
  margin-right: 24rpx;
}
.share_bd{
  padding-left:94rpx;
  margin-right: 24rpx;

}
.share_bd {
  border-bottom: 1px solid rgba(224, 224, 224, 1);
}
