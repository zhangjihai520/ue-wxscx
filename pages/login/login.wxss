.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.primary{
  background: #3281FF;
  color: #fff;
}
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top:60vh;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}
.cover_title{
   text-align: center;
   padding-top: 30rpx;
   font-size: 30rpx;
   font-weight: bold;
}
.cover_text{
  text-align: center;
  padding: 30rpx 0;
  font-size:30rpx;
}
.btn_box{
  display: flex;
  justify-content: space-between;
}
.btns{
  font-size:40rpx;
  width: 50%;
  height: 80rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: center;
  padding: 0;
  margin-top: 20rpx;
}