/* pages/myself/myself.wxss */

.top_contant {
  background: linear-gradient(rgba(59, 146, 227, 1), rgba(95, 163, 227, 1));
}
.user_box{
  padding: 0 14px !important
}
.user_img {
  width: 36px;
  height: 36px;
  border: 2px solid #fff;
  border-radius: 50%;
}

.weui-cell__bd {
  padding-left: 13px;
}

.user_name {
  font-size: 13px !important;
  color: #fff;
}

.status_box {
  margin-top: -5px !important;
}

.user_status {
  font-size: 10px;
  background: rgba(43, 126, 194, 1);
  padding: 2px 3px;
  border-radius: 50em;
  color: #fff;
}
.canvas_contant {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  -webkit-text-size-adjust: none;
  -webkit-user-select: none;
}
.canvas {
  width: 100%;
  height: 125px;
}
.text_info{
  font-size: 11.5px;
  color: #D8E4F0;
  text-align: center;
  position: relative;
  top: -6px;
}
.weui-cell_active{
  border-bottom: 1px solid rgba(235, 235, 235, 1) !important;
}
.icon_img{
  width: 16px;
  height: 17px;
}
.text_left{
  font-size: 15px;
  color: rgba(41, 41, 41, 1);
}
.text_right{
  font-size: 11px;
  color: rgba(56, 56, 56, 1);
}
.weui-cell__ft{
  border: none !important;
}

